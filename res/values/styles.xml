<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar" tools:ignore="NewApi">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MoneyManager.Actionbar.Style</item>
    </style>

    <style name="MoneyManager.Actionbar.Style" parent="@android:style/Widget.Holo.ActionBar.Solid" tools:ignore="NewApi">
        <!-- <item name="android:background" tools:ignore="NewApi">@android:color/holo_blue_light</item> -->
    </style>

</resources>