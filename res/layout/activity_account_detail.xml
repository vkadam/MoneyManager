<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_account_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AccountDetailActivity" >

    <EditText
        android:id="@+id/input_account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:hint="@string/prompt_account_name"
        android:maxLines="1"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/input_account_balance"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/input_account_name"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="@string/prompt_account_balance"
        android:inputType="numberDecimal|numberSigned" />

    <Spinner
        android:id="@+id/spinner_account_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/input_account_balance"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:entries="@array/currency_types"
        tools:listitem="@android:layout/simple_spinner_item" />

    <EditText
        android:id="@+id/input_account_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinner_account_currency"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="@string/prompt_account_note"
        android:inputType="textMultiLine"
        android:maxLines="2" />

</RelativeLayout>